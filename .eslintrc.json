{
    "extends": "airbnb-base",
    "env": {
        "node": true
    },
    "parserOptions": {
        "ecmaVersion": 6
    },
    "rules": {
        "func-names": ["off", "always"],
        "import/no-extraneous-dependencies": "off",
        "linebreak-style": ["error", "unix"], //set linebreak to windows to get rid of eslint linebreak style error
        "no-console": "off",
        "no-unused-vars": "warn"
    }
}